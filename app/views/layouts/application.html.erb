<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>
  <%= render 'layouts/vendor_stylesheets' %>
  <%= render 'layouts/vendor_javascripts'%>
  <%= stylesheet_link_tag    "application" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <%= yield :head %>
</head>
<body>
	<div class="container">
		<%= render 'layouts/header' %>
		<section class="round">
		<% flash.each do |key, value| %>
			<div class="flash <%= key %>">
				<%= value %>
			</div>	
		<% end %>
		<%= yield %>
		</section>
		<%= render 'layouts/footer' %>
		<%= debug(params) if Rails.env.development? %>
	</div>
</body>
</html>
